{
  "coc.preferences.formatOnType": true,
  "coc.preferences.enableLinkedEditing": true,
  "signature.enable": true,
  "signature.floatConfig": {
    "rounded": false,
    "border": true
  },
  "diagnostic.floatConfig": {
    "rounded": false,
    "border": true
  },
  "coc.preferences.floatActions": false,

  "colors.enable": true,

  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "pullDiagnostic.onChange": false,
  "pullDiagnostic.onSave": true,

  "inlayHint.enable": false,
  "semanticTokens.enable": false,

  "languageserver": {
    "perlnavigator": {
      "command": "node",
      "args": [
        "/home/kpm/nmojeprogramy/PerlNavigator/server/out/server.js",
        "--stdio"
      ],
      "filetypes": ["perl"]
    },
    "fennel-language-server": {
      "command": "fennel-language-server",
      "args": [
        "lsp",
        "stdio"
      ],
      "filetypes": ["fennel"]
    },
    "vala": {
       "command": "vala-language-server",
       "filetypes": ["vala", "genie"]
     },
    "rust": {
      "command": "/home/kpm/nmojeprogramy/rust-analyzer/target/release/rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "janet": {
      "command": "janet-lsp",
      "args": [
        "--stdio"
      ],
      "filetypes": ["janet"],
    }
  }
}
